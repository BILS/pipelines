manifest {
  name = 'TranscriptAssemblyHisat2Stringtie'
  author = 'Mahesh Binzer-Panchal'
  homePage = ''
  description = 'Nextflow Transcript assembly pipeline, using Hisat2 and Stringtie'
  mainScript = 'TranscriptAssemblyHisat2Stringtie.nf'
  nextflowVersion = '>=0.32.0'
  version = '0.1'
}

profiles {
  conda { process.conda = "$baseDir/environment.yml" }
  debug { process.beforeScript = 'echo $HOSTNAME' }
  docker { docker.enabled = true }
  singularity { singularity.enabled = true }
  test { includeConfig 'conf/test.config' }

  nbis {
    executor {
      name = 'slurm'
    }
    process { 
      cpus = 1
      maxForks = 20
      scratch = true
      stageOutMode = 'rsync'
      withName: fastqc {
        cpus = 2
      }
      withName: trimmomatic {
        cpus = 2
      }
      withName: hisat2_index {
        cpus = 4
      }
      withName: hisat2 {
        cpus = 8
      }
      withName: stringtie {
        cpus = 8
      }
      // withName: multiqc {
      // }
    }
  }
}

params {

  // Pipeline Options
  outdir = './results'
  tracedir = "${params.outdir}/pipeline_info"
}

process.container = 'transcript-assembly-hisat2-stringtie:1.0'
process.shell = ['/bin/bash', '-euo', 'pipefail']

timeline {
  enabled = true
  file = "${params.tracedir}/execution_timeline.html"
}

report {
  enabled = true
  file = "${params.tracedir}/execution_report.html"
}

trace {
  enabled = true
  file = "${params.tracedir}/execution_trace.txt"
}

dag {
  enabled = true
  file = "${params.tracedir}/pipeline_dag.svg"
}

