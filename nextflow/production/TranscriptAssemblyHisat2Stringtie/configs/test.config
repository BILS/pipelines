params {
  config_profile_name = 'Test profile'
  config_profile_description = 'Minimal test dataset to check pipeline function'
  container = 'transcript-assembly-hisat2-stringtie:1.0'
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h
  // Input data
  paired = false
  reads = 'test_data/*.fastq.gz'
  genome = 'test_data/genome.fa'
}

docker {
  enabled = true
  fixOwnership = true
  runOptions = "-u \$(id -u):\$(id -g)"
}
