
params {

  // set up default params
  help = false

  // Base specifications
  max_cpus = 16 
  max_memory = 128.GB 
  max_time = 240.h 

}

process {

  //base configuration
  shell = ['/bin/bash', '-euo', 'pipefail']

}

report {  

  // Turning on execution report by default
  enabled = true
  file = "${params.outDir}/Reports/Execution_report.html"

}

timeline { 

  // Turning on timeline tracking by default
  enabled = true
  file = "${params.outDir}/Reports/Execution_timeline.html"

}

dag { 

  // Turning on dag by default
  enabled = true
  file = "${params.outDir}/Reports/DAG.svg"

}

trace { 

  // Turning on trace tracking by default
  enabled = true
  file = "${params.outDir}/Reports/Execution_trace.txt"

}
